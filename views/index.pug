extends layout.pug
block content 

    h2 Books
    p: a(href='/new_book') Create New Book

    table(style='width:100%', border='1')
        tr
            th Title
            th Author
            th Genre
            th Year
        each book in books
            tr 
                td: a(href=`/book/${book.id}/edit`) #{book.title}: 
                td #{book.author}
                td #{book.genre}
                td #{book.year}
