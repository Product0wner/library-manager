extends layout.pug

block content 

    h1 Update 

    form(action=`/book/update/${book.id}` method="post")
        if errors
            h2.error Oooops!
                ul.error
                each error in errors
                    if error.path === "author"
                        li Author is required
                    if error.path === "title"
                        li Title is required
        p
            label(for="title") Title
            input(type="text", name="title", value=book.title)
        p
            label(for="author") Author
            input(type="text", name="author", value=book.author)
        p
            label(for="genre") Genre
            input(type="text", name="genre", value=book.genre)
        p
            label(for="year") Year
            input(type="number", name="year", value=book.year)
        input(type="submit", value="Update Book")

    form(action=`/${book.id}/delete` method="post" onsubmit="return confirm('Do you really want to delete this book?')")
        input(type="submit", value="Delete Book")